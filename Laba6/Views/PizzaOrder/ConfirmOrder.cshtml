<!-- Views/PizzaOrder/ConfirmOrder.cshtml -->
@model Laba6.Models.User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Confirm Order Page</title>
    <style>
        body {
            background-color: lightyellow;
            text-align: center;
            padding: 50px;
        }

        form {
            display: inline-block;
            text-align: left;
        }

        label {
            font-size: 24px;
            display: block;
            margin-bottom: 10px;
        }

        input[type="text"], input[type="number"] {
            font-size: 24px;
            padding: 10px;
            margin-bottom: 20px;
            width: 300px;
        }

        button[type="submit"] {
            font-size: 24px;
            padding: 10px 20px;
            background-color: lightblue;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
    </style>
</head>
<body>
    <h1>Confirm Your Pizza Order</h1>
    <form method="post" action="/PizzaOrder/ProcessOrder">
        <label for="productName">Product Name:</label>
        <input type="text" id="productName" name="products[0].Name"><br>
        <label for="productPrice">Product Price:</label>
        <input type="number" id="productPrice" name="products[0].Price"><br>
        <label for="productQuantity">Product Quantity:</label>
        <input type="number" id="productQuantity" name="products[0].Quantity"><br>
        <button type="submit">Submit</button>
    </form>
</body>
</html>